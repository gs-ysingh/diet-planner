# Environment variables for development
DATABASE_URL="postgresql://username:password@localhost:5432/diet_planner?schema=public"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
OPENAI_API_KEY="your-openai-api-key-here"
NODE_ENV="development"
PORT=4000
CORS_ORIGIN="http://localhost:3000"

# Email Configuration
# For development, these are optional (uses Ethereal for testing)
# For production, configure your SMTP service

# SMTP Settings (for production)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@dietplanner.com"

# Ethereal Email (for development testing - optional)
ETHEREAL_USER="test@ethereal.email"
ETHEREAL_PASS="test"

# Client URL (for email links)
CLIENT_URL="http://localhost:3000"
